---
import ContactModal from '../components/ContactModal.astro';
---
<div x-data="{ scrolled: false, contactModalOpen: false }">
  <header
    x-init="
      const handleScroll = () => scrolled = window.scrollY > 10;
      handleScroll();
      window.addEventListener('scroll', handleScroll);
    "
    :class="scrolled ? 'bg-white/90 shadow-md backdrop-blur-md' : 'bg-transparent'"
    class="fixed w-full top-0 left-0 z-40 transition-all duration-300"
  >
    <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
      <a href="#" class="text-xl font-bold text-gray-800">
        Giovanni Amodeo
      </a>

      <nav class="hidden md:flex space-x-6 font-medium text-gray-800">
        <a href="#about" class="hover:text-blue-300 transition">About</a>
        <a href="#timeline" class="hover:text-blue-300 transition">Journey</a>
        <a href="#services" class="hover:text-blue-300 transition">Services</a>
        <a href="#testimonial" class="hover:text-blue-300 transition">Trusted By</a>
        <a href="/featured" class="hover:text-blue-300 transition">Featured</a>

        <button 
          @click="contactModalOpen = true"
          type="button"
          class="hover:text-blue-300 transition"
        >
          Contact Me
        </button>
      </nav>
    </div>
  </header>

  <ContactModal />
</div>
