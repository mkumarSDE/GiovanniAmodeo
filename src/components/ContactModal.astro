<div 
  x-show="contactModalOpen"
  x-transition
  class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center px-4"
  @click.self="contactModalOpen = false"
>
  <div class="bg-white rounded-3xl shadow-2xl w-full max-w-3xl p-10 relative overflow-hidden">
    <!-- Close Button -->
    <button
      class="absolute top-4 right-4 text-gray-400 hover:text-gray-600 text-xl"
      @click="contactModalOpen = false"
    >
      &times;
    </button>

    <!-- Title -->
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Letâ€™s Connect</h2>
    
    <!-- Social Icons -->
    <div class="flex justify-center space-x-6 mb-8 text-gray-600 text-xl">
      <a href="https://linkedin.com" target="_blank" class="hover:text-blue-600 transition"><i class="fab fa-linkedin"></i></a>
      <a href="https://twitter.com" target="_blank" class="hover:text-blue-400 transition"><i class="fab fa-twitter"></i></a>
      <a href="mailto:you@example.com" class="hover:text-red-500 transition"><i class="fas fa-envelope"></i></a>
      <a href="https://github.com" target="_blank" class="hover:text-gray-800 transition"><i class="fab fa-github"></i></a>
    </div>

    <!-- Form -->
    <form class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <input type="text" placeholder="Name" class="col-span-1 md:col-span-2 px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none" />
      <input type="email" placeholder="Email" class="col-span-1 px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none" />
      
      <!-- Phone Number with Country Code -->
      <div class="col-span-1 flex space-x-2">
        <input type="tel" placeholder="Phone Number" class="flex-1 px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none" />
      </div>

      <textarea placeholder="Message" rows="5" class="col-span-1 md:col-span-2 px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 outline-none resize-none"></textarea>
    </form>

    <!-- Submit Button -->
    <div class="mt-8 text-center">
      <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-3 rounded-full transition">
        Send Message
      </button>
    </div>
  </div>
</div>
