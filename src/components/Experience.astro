---
const experiences = [
{
    year: '2023',
    title: 'Host, Ion Fireside Chat',
    company: 'ION Analytics',
    description: 'Host of 150+ closed-door fireside chats with global investors & executives.',
    color: 'from-orange-500 to-red-500',
  },
  {
    year: '2020',
    title: 'Chief Data Officer',
    company: 'ION Analytics',
    description: 'Led 600+ analysts; unified 30+ databases post-merger.',
    color: 'from-pink-500 to-purple-500',
  },
  {
    year: '2010',
    title: 'Editor-in-Chief',
    company: 'Mergermarket',
    description: 'Scaled global team; launched Editorial Analytics division.',
    color: 'from-purple-600 to-indigo-600',
  },
  {
    year: '2007',
    title: 'Editor, EMEA',
    company: 'Mergermarket & Wealthmonitor',
    description: 'Led EMEA growth in Africa and Central Asia.',
    color: 'from-indigo-600 to-blue-600',
  },
  {
    year: '2003',
    title: 'Correspondent',
    company: 'Mergermarket',
    description: 'Established Mergermarket\'s footprint in Italy.',
    color: 'from-teal-600 to-cyan-600',
  },

];
---

<section id="timeline" class="py-16 md:py-20 bg-gradient-to-br from-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 mb-4 md:mb-6 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
        Career Timeline
      </h2>
      <p class="text-lg sm:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed font-medium px-4">
        A journey of leadership, innovation, and strategic growth across global markets
      </p>
    </div>

    <!-- Desktop & Tablet Timeline (Horizontal) -->
    <div class="hidden md:grid relative grid-cols-1 md:grid-cols-5 gap-8 items-start text-center">
      <!-- Enhanced Dashed Line -->
      <div class="absolute top-12 left-0 right-0 h-1 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 opacity-30 z-0"></div>

      {experiences.map((item) => (
        <div class="relative z-10 flex flex-col items-center self-start group">
          <!-- Enhanced Year Circle -->
          <div class={`w-16 h-16 md:w-20 md:h-20 rounded-full bg-gradient-to-r ${item.color} text-white flex items-center justify-center font-bold text-sm md:text-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-110`}>
            {item.year}
          </div>

          <!-- Enhanced Dot Connector -->
          <div class="w-3 h-3 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full my-4 shadow-md"></div>

          <!-- Enhanced Info Card -->
          <div class="mt-4 bg-white rounded-2xl p-4 md:p-6 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-gray-100 max-w-xs h-48 flex flex-col justify-start">
            <h4 class="text-base md:text-lg font-bold text-gray-900 mb-2 leading-tight">
              {item.title}
            </h4>
            <p class="text-blue-600 font-semibold text-xs md:text-sm mb-3">
              {item.company}
            </p>
            <p class="text-gray-600 text-xs md:text-sm leading-relaxed">
              {item.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Mobile Timeline (Vertical) -->
    <div class="md:hidden space-y-8 max-w-4xl mx-auto">
      {experiences.map((item, index) => (
        <div class="relative flex items-start space-x-4">
          <!-- Timeline Line -->
          <div class="flex flex-col items-center">
            <div class={`w-12 h-12 rounded-full bg-gradient-to-r ${item.color} text-white flex items-center justify-center font-bold text-sm shadow-lg`}>
              {item.year}
            </div>
            {index < experiences.length - 1 && (
              <div class="w-0.5 h-8 bg-gradient-to-b from-blue-500 to-purple-500 mt-2"></div>
            )}
          </div>

          <!-- Content Card -->
          <div class="flex-1 bg-white rounded-2xl p-4 shadow-lg border border-gray-100">
            <h4 class="text-lg font-bold text-gray-900 mb-2">
              {item.title}
            </h4>
            <p class="text-blue-600 font-semibold text-sm mb-3">
              {item.company}
            </p>
            <p class="text-gray-600 text-sm leading-relaxed">
              {item.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
