<section id="about" class="py-20 px-6 bg-gray-50">
  <div class="max-w-6xl mx-auto">
    <!-- Title -->
    <h2 class="text-4xl font-bold text-gray-800 text-center mb-16">About Me</h2>

    <div class="flex flex-col md:flex-row items-start gap-10">
