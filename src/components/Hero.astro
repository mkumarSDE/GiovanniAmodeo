<style>
  .hero-bg {
    background-image: url('/bg-images.jpg');
    background-size: cover;
    background-position: center;
  }

  .blur-overlay {
    position: absolute;
    inset: 0;
    z-index: -1;
    transition: filter 0.3s ease;
  }

  .profile-pic {
    width: 250px;
    height: 250px;
    border-radius: 50%;
    object-fit: cover;
    border: 6px solid #fff;
    margin-bottom: 30px;
  }

  .social-icon {
    font-size: 24px;
    color: white;
    transition: color 0.3s ease;
  }

  .social-icon:hover {
    color: #3b82f6; /* Tailwind blue */
  }

  .socials-container {
    position: absolute;
    bottom: 30px;
    right: 30px;
    background-color: rgba(0, 0, 0, 0.5);
    padding: 12px 16px;
    border-radius: 12px;
    display: flex;
    gap: 16px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.2);
  }
</style>

<section
  id="hero"
  class="relative min-h-screen flex flex-col justify-center items-center text-center px-4 overflow-hidden pt-24"
  x-data="{ blur: 20 }"
  x-init="
    const updateBlur = () => {
      blur = Math.max(0, 20 - window.scrollY / 10);
      $refs.bg.style.filter = `blur(${blur}px)`;
    };
    updateBlur();
    window.addEventListener('scroll', updateBlur);
  "
>
  <!-- Background blur -->
  <div
    x-ref="bg"
    class="hero-bg blur-overlay"
    style="filter: blur(20px);"
  ></div>

  <!-- Profile Picture -->
  <img
    src="/photo.jpg"
    alt="Profile"
    class="profile-pic"
  />

  <!-- Name and Description -->
  <h1 class="text-4xl md:text-6xl font-bold text-white drop-shadow mb-4 z-10">
    Giovanni Amodeo
  </h1>

